{
  "name": "pengepantry",
  "private": true,
  "scripts": {
    "dev": "yarn workspaces run dev",
    "reset": "find . -type dir -name node_modules | xargs rm -rf && rm -rf yarn.lock"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": ["**/@nestjs", "**/@nestjs/**"]
  },
  "dependencies": {
    "react": "18.2.0",
    "typescript": "4.4.4"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint-plugin-import": "^2.26.0"
  }
}
